# Database Configuration
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password
MONGODB_DATABASE=visual_canvas

# Message Queue Configuration
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=password

# Cache Configuration
REDIS_PASSWORD=password

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h

# Service URLs (for production deployment)
GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3003
CANVAS_SERVICE_URL=http://localhost:3001
CHAT_SERVICE_URL=http://localhost:3004
SHAPES_SERVICE_URL=http://localhost:3005

# External Services (if using cloud providers)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/visual_canvas
# RABBITMQ_URL=amqps://username:password@hostname:port/vhost
# REDIS_URL=redis://username:password@hostname:port

# Logging
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_CORS_ORIGIN=http://localhost:3000

# Monitoring
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
